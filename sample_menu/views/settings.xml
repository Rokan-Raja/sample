<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">sample_settings_view</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5" />
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="sample" string="Sample_settings" data-key="sample">
                        <h2>Sample Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_left_pane">
                                <field name="name" string="Name" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sample_settings_action_window">
            <field name="name">sample_model_settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'sample'}</field>
        </record>

        <menuitem id="sample_menu_settings" name="sample_settings" parent="sample_menu" action="sample_settings_action_window" />

    </data>

</odoo>